# App Configuration
APP_NAME=<application_name>
DEBUG=<True/False>

# Database configuration
DB_USER=<username>
DB_PASS=<password>
DB_HOST=<host>
DB_PORT=<port>
DB_NAME=<database>
DATABASE_URL=postgresql+psycopg://<username>:<password>@<host>:<port>/<database>

# Redis configuration
REDIS_URL=redis://localhost:6379/0  # Redis connection URL (leave unset to disable caching)
REDIS_DUT_CACHE_TTL=300              # Default cache TTL in seconds (5 minutes)
ENABLE_DUT_CACHE=true                # Enable/disable Redis caching for DUT endpoints

# JWT configuration
# random 32-bytes | run: `openssl rand -hex 32`
JWT_SECRET=<random_32bytes>
JWT_ALG=<HS256/RS256/ES256/etc>
JWT_TTL=<int_ttl>  # ttl in seconds
JWT_REFRESH_TTL=<int_ttl>   # ttl in seconds

# Argon2 tuning (low CPU/RAM; adjust if needed)
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=32768      # KiB (32 MB)
ARGON2_PARALLELISM=2

# ASTPARSER Configuration
ASTPARSER_API_KEY=changeme_api_key
ASTPARSER_ADMIN_KEY=changeme_admin_key
UPLOAD_TTL_SECONDS=<int_ttl>

# Base URL used by tests (override by exporting ASTPARSER_TEST_BASE in the shell)
ASTPARSER_TEST_BASE=<http://test_base_url>
UPLOAD_PERSIST=<0/1>

# External API Configuration
DUT_API_BASE_URL=<http://intranet_dut_api_url>
DUT_API_USERNAME=<username>
DUT_API_PASSWORD=<password>
RUN_DUT_API_TESTS=<0/1>

# iPLAS API Configuration
DUT2_API_BASE_URL=<http://test_base_url>
DUT2_API_TOKEN=<token_string>
DUT2_API_TIMEOUT=<int_timeout>